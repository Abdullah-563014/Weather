    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:colorControlNormal">@color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:colorControlNormal">@color/white</item>
    </style>




    <style name="section_root">
        <item name="android:background">@drawable/rounded_light_white_bg</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="section_title_tv">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="section_title_root">
        <item name="android:background">@drawable/section_title_root_bg</item>
        <item name="android:padding">@dimen/_10sdp</item>
    </style>
    <style name="forecast_condition_name_tv">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="forecast_condition_time_tv">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="normal_tv">
        <item name="android:layout_marginTop">@dimen/_2sdp</item>
        <item name="android:layout_marginBottom">@dimen/_2sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="UnitSettingDialogDropDownStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_15sdp</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:drawablePadding">@dimen/_5sdp</item>
        <item name="android:drawableEnd">@drawable/ic_down</item>
        <item name="android:background">@color/lightSlateGray</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyButtonStyle">
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_15sdp</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/rounded_corner_bg</item>
        <item name="android:textStyle">bold</item>
    </style>




</resources>